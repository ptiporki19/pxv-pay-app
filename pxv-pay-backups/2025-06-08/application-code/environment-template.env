# PXV Pay Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Connection (Required)
DATABASE_URL=postgresql://postgres:your_password@localhost:54322/postgres

# NextAuth Configuration (Required for auth)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Application Configuration
NODE_ENV=development
APP_ENV=local

# Optional: External API Keys
# Add any other API keys your application uses

# Local Development Ports (Default)
# NEXT_PORT=3000
# SUPABASE_PORT=54321

# Note: Never commit actual credentials to version control
# This template shows the required structure only 